
USE_OCAMLFIND = true
NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAMLFLAGS += -annot -thread
OCAMLOPTFLAGS += -inline 100

.SUBDIRS: src test

.SUBDIRS: leveldb
    libleveldb.a:
       make
    clean:
       make clean

install:
	ocamlfind install leveldb META src/dllcamlleveldb.so src/leveldb.cma src/leveldb.cmxa src/leveldb.a

uninstall:
	ocamlfind remove leveldb